<%- include("partials/header") %>

<div class="ui main container segment">
	<h1 class="ui huge header">
		<%= blog.title %>
	</h1>
	<div class="ui top attached segment">
  		<div class="item">
      		<img class=" ui image Centered rounded" src="<%= blog.image %>">
    		<div class="ui content meta">
				<span>-<%= blog.date.toDateString() %> </span>	
	 		</div>
	  		<div class="description">
				<p><%- blog.body %></p>
	  		</div>
			<a href="/blogs/<%=blog._id%>/edit" class="ui basic yellow button">
					Edit
			</a>
			<form id="delete" action="/blogs/<%=blog._id%>?_method=DELETE" method="POST">
				<button  class="ui basic red button">
					Delete
				</button>
			</form>	
		</div>
	</div>
</div>


<%- include("partials/footer") %>

